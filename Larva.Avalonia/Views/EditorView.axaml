<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Larva.Avalonia.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="Larva.Avalonia.Views.EditorView"
             x:DataType="vm:EditorViewModel" x:CompileBindings="True">

    <Grid>
        <TextBlock Text="Get started by creating a new project."
                   IsVisible="{Binding Project, Converter={x:Static ObjectConverters.IsNull}}"
                   HorizontalAlignment="Center" />
    </Grid>
</UserControl>